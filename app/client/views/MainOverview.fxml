<GridPane prefHeight="600.0" prefWidth="800.0" stylesheets="@stylesheets/base.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.viewmodels.EventHandlingController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="50" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="NEVER" />
        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="400.0" prefHeight="600.0" valignment="TOP" vgrow="ALWAYS" />
    </rowConstraints>
    <GridPane id="header" alignment="BASELINE_LEFT" minHeight="30.0" prefHeight="30.0" prefWidth="800.0" snapToPixel="false" stylesheets="@stylesheets/HeaderStyle.css" GridPane.halignment="LEFT" GridPane.hgrow="NEVER" GridPane.vgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints minWidth="100.0" percentWidth="30.0" />
            <ColumnConstraints percentWidth="70.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="NEVER" />
        </rowConstraints>
        <Label id="logo-text" fx:id="label_Logo" stylesheets="@stylesheets/HeaderStyle.css" text="Crow Backup" />
        <GridPane GridPane.columnIndex="1">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <HBox nodeOrientation="RIGHT_TO_LEFT" prefHeight="100.0" prefWidth="200.0">
                <Button fx:id="button_Help" mnemonicParsing="false" stylesheets="@stylesheets/ButtonStyles.css" textAlignment="CENTER">
                    <graphic>
                        <ImageView fitHeight="15.0" fitWidth="15.0" layoutX="10.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@resources/white-help-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="button_Settings" mnemonicParsing="false" stylesheets="@stylesheets/ButtonStyles.css" text="Einstellungen" />
                <Button fx:id="button_Login" mnemonicParsing="false" stylesheets="@stylesheets/ButtonStyles.css" text="Anmelden" />
            </HBox>
        </GridPane>
    </GridPane>
    <SplitPane dividerPositions="0.3" GridPane.rowIndex="1">
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <TitledPane fx:id="titledPane_MyBackups" animated="false" maxHeight="1.7976931348623157E308" prefHeight="500.0" text="Meine Backups">
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <ListView fx:id="listView_MyBackups" prefHeight="200.0" prefWidth="200.0" />
                </GridPane>
            </TitledPane>
            <TitledPane fx:id="titledPane_MyFriends" animated="false" maxHeight="1.7976931348623157E308" prefHeight="500.0" text="Meine Freunde" GridPane.rowIndex="1">
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints percentHeight="100.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <ListView fx:id="listView_MyFriends" maxHeight="1.7976931348623157E308" prefHeight="200.0" prefWidth="200.0" />
                </GridPane>
            </TitledPane>
        </GridPane>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
        </GridPane>
    </SplitPane>
</GridPane>
